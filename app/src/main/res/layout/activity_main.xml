<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hencoder.wzn.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_onDraw_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View的onDraw方法" />

        <Button
            android:id="@+id/btn_draw_by_paint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制圆角矩形和扇形" />

        <Button
            android:id="@+id/btn_draw_clip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制的裁切" />

        <Button
            android:id="@+id/btn_draw_hb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制花呗信用" />

        <Button
            android:id="@+id/btn_path_quat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="贝塞尔曲线的简单应用" />
    </LinearLayout>
</ScrollView>
